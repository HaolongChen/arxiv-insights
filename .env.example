# Poke API Configuration for arXiv Insights
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# Required: Your Poke API key
# Get your key from: https://api.poke.example.com/keys
POKE_API_KEY=pk_sK9vjqit8h_q1kuEiu8obdT4VhDcO-7QPBAz0KP0S08

# Optional: Base URL for Poke API
# Default: https://api.poke.example.com
POKE_API_BASE_URL=https://api.poke.example.com

# Optional: Request timeout in seconds
# Default: 30
POKE_API_TIMEOUT=30

# Optional: Maximum number of retry attempts
# Default: 3
POKE_API_MAX_RETRIES=3

# Optional: Maximum requests per minute
# Default: 60
POKE_API_RATE_LIMIT=60

# Optional: Circuit breaker failure threshold
# Number of failures before circuit opens
# Default: 5
POKE_API_CIRCUIT_BREAKER_THRESHOLD=5

# Optional: Circuit breaker timeout
# Seconds before attempting to close circuit
# Default: 60
POKE_API_CIRCUIT_BREAKER_TIMEOUT=60

# Optional: Enable Poke API by default
# Default: false
POKE_API_ENABLED=false
