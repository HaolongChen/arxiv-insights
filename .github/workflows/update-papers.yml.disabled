name: Update arXiv Papers

on:
  repository_dispatch:
    types: [new-arxiv-paper]
  
  workflow_dispatch:
    inputs:
      content:
        description: 'JSON content of the new paper (optional - will fetch from arXiv if not provided)'
        required: false
      max_papers:
        description: 'Maximum number of papers to fetch'
        required: false
        default: '5'
      days_back:
        description: 'Number of days to look back for papers'
        required: false
        default: '2'
  
  schedule:
    - cron: '0 */8 * * *'  # Every 8 hours

jobs:
  process-paper:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pyyaml markdown beautifulsoup4 requests arxiv
      
      # Option 1: Process single paper if provided
      - name: Process single paper (if provided)
        if: github.event.client_payload.content != '' || github.event.inputs.content != ''
        env:
          PAPER_DATA: ${{ github.event.client_payload.content || github.event.inputs.content }}
        run: |
          echo "ðŸ“„ Processing single paper from input..."
          python scripts/process-paper.py
      
      # Option 2: Fetch papers from arXiv (scheduled or manual trigger without input)
      - name: Fetch papers from arXiv
        if: github.event.client_payload.content == '' && github.event.inputs.content == ''
        id: fetch
        env:
          MAX_PAPERS: ${{ github.event.inputs.max_papers || '5' }}
          DAYS_BACK: ${{ github.event.inputs.days_back || '2' }}
        run: |
          echo "ðŸ” Fetching papers from arXiv..."
          python scripts/fetch-arxiv-papers.py
      
      # Process batch of fetched papers
      - name: Process fetched papers
        if: github.event.client_payload.content == '' && github.event.inputs.content == ''
        run: |
          echo "ðŸ“š Processing fetched papers..."
          python scripts/process-batch.py
      
      - name: Update indexes
        run: |
          python scripts/update-index.py
      
      - name: Commit and push changes
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add .
          git diff --quiet && git diff --staged --quiet || (
            git commit -m "ðŸ”¬ Add new arXiv papers [automated]"
            git push
          )
      
      - name: Summary
        run: |
          echo "âœ… Paper processing complete" >> $GITHUB_STEP_SUMMARY
          echo "ðŸ“… Date: $(date)" >> $GITHUB_STEP_SUMMARY
          if [ -f "papers-batch.json" ]; then
            echo "ðŸ“Š Papers processed from batch file" >> $GITHUB_STEP_SUMMARY
          elif [ -n "$PAPER_DATA" ]; then
            echo "ðŸ“„ Single paper processed from input" >> $GITHUB_STEP_SUMMARY
          fi
